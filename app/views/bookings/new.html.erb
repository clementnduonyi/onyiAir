<%= render 'flights/flight_details', flight: @flight %>
<div class="section" id="seats-section">
    <div class="container">
        <div class="column is-half">
        <h2 class="title is-5">Passengers detail</h2>
        <p>Kindly fill in your details below </p> <br />
    <%= form_with(model: @booking, local: true) do |f| %>
        <%= f.hidden_field :flight_id, value: @flight.id %>
        <% i = 0 %>
        <%= f.fields_for :passengers do |p_info| %>
            <% if p_info %>
                <%= "Passenger #{i += 1}"%>
            <% end %>
            <div class="field">
                <div class="control">
                    <%= p_info.text_field :name, autofocus: true, placeholder: "Name", reqiured: true, wrapper: false, class: "button is-white is-fullwidth has-text-left" %>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <%= p_info.text_field :email, placeholder: "Email", reqiured: true, wrapper: false, class: "button is-white is-fullwidth has-text-left mt-6" %>
                </div>
            </div>
            <br />
        <% end %>
    
    <%= f.submit "Confirm", class: "button is-success is-fullwidth" %>
    <% end %>
    </div>
</div>




